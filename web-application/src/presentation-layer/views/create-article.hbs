<form action="/create-article" method="post">
    <input class="input" name="title" type="text" placeholder="Title" maxlength="100">
    <div class="field">
        <div class="control">
            <textarea class="textarea " name="description" placeholder="Description" maxlength="250"></textarea>
        </div>
    </div>
    <div class="field">
        <div class="control">
            <textarea class="textarea " name="content" placeholder="Content" maxlength="5000"></textarea>
        </div>
    </div>
    <div class="buttons has-addons is-centered">
        <p class="control">
            <button type="submit" class="button is-link">
                Create article
            </button>
        </p>
    </div>
</form>