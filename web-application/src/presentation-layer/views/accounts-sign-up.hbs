<div class="container has-text-centered">
	<div class="column is-4 is-offset-4">
		<h3 class="title has-text-black">Sign up</h3>
		<p>{{error}}</p>
		<div class="box">
			<form action="/accounts/sign-up" method="POST">
				<div class="field">
					<div class="control">
						<input class="input is-large" name="username" required="required" placeholder="Username"
							autofocus="">
					</div>
				</div>
				<div class="field">
					<div class="control">
						<input class="input is-large" name="email" required="required" placeholder="Your e-mail adress"
							autofocus="">
					</div>
				</div>

				<div class="field">
					<div class="control">
						<input class="input is-large" type="password" required="required" name="password"
							placeholder="Your Password">
					</div>
				</div>
				<div class="field">
					<div class="control">
						<input class="input is-large" type="password" required="required" name="confirmationPassword"
							placeholder="Confirm Password">
					</div>
				</div>
				<button class="button is-block is-info is-large is-fullwidth" type="submit">Sing up <i
						class="fa fa-sign-in" aria-hidden="true"></i></button>
			</form>
		</div>
		</h3>
	</div>
</div>